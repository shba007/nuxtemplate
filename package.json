{
  "name": "nuxtemplate",
  "version": "0.2.0",
  "description": "Nuxt + Typescript + Tailwind + Tauri Template",
  "author": "Shirsendu Bairagi <shirsendu2001@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shba007/nuxtemplate.git"
  },
  "type": "module",
  "private": true,
  "engines": {
    "node": "^20.15.0 || ^22.11.0",
    "pnpm": "^9.15.0 || ^10.2.0",
    "bun": "^1.2.9"
  },
  "packageManager": "bun@1.2.19",
  "scripts": {
    "prepare": "husky || true",
    "postinstall": "nuxt prepare && prisma generate",
    "dev": "nuxt dev",
    "detect": "gitleaks git --verbose",
    "lint": "eslint . --fix",
    "format": "prettier . --write",
    "test:load": "k6 run tests/load.test.ts",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "clean": "nuxt cleanup && (cd src-tauri && cargo clean)",
    "start": "node .output/server/index.mjs",
    "prisma:pull": "prisma db pull",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build --build-arg VERSION=dev --build-arg BUILD_TIME=now -t nuxtemplate:dev .",
    "docker:start": "docker run --detach --name nuxtemplate-dev --env-file .env.prod -p 4000:3000 nuxtemplate:dev",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:dev:mobile": "tauri android dev",
    "tauri:build:mobile": "tauri android build"
  },
  "prisma": {
    "seed": "jiti prisma/seed.ts"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.48.4",
    "@notionhq/client": "^4.0.1",
    "@nuxt/eslint": "^1.7.1",
    "@nuxt/fonts": "^0.11.4",
    "@nuxt/icon": "^1.15.0",
    "@nuxt/image": "^1.11.0",
    "@nuxt/scripts": "0.11.5",
    "@nuxt/test-utils": "^3.19.2",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/i18n": "^10.0.3",
    "@nuxtjs/seo": "^3.1.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.2",
    "@prisma/client": "6.7.0",
    "@tauri-apps/api": "^2.7.0",
    "@types/web-push": "^3.6.4",
    "@unhead/vue": "^2.0.13",
    "@vite-pwa/nuxt": "^1.0.4",
    "@vueuse/core": "^13.6.0",
    "@vueuse/nuxt": "^13.6.0",
    "nuxt": "^3.18.0",
    "nuxt-auth-utils": "^0.5.22",
    "pinia": "^3.0.3",
    "prisma": "^6.13.0",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "web-push": "^3.6.7",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tauri-apps/cli": "^2.7.1",
    "@types/k6": "^1.1.1",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.32.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "playwright-core": "^1.54.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@prisma/client",
    "@prisma/engines",
    "esbuild",
    "prisma",
    "protobufjs",
    "sharp",
    "unrs-resolver"
  ]
}
